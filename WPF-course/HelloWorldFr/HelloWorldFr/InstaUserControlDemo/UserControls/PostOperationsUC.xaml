<UserControl x:Class="HelloWorldFr.InstaUserControlDemo.UserControls.PostOperationsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HelloWorldFr.InstaUserControlDemo.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="550">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Image
                x:Name="Heart"
                Stretch="Uniform"
                Margin="8"
                MouseDown="Heart_MouseDown"
                Source="../Icons/nolike.png"></Image>
            <Image
                Stretch="Uniform"
                Margin="8"
                Source="../Icons/comment.png"></Image>
            <Image
                Stretch="Uniform"
                Margin="8"
                Source="../Icons/send.png"></Image>
        </StackPanel>
        <Image
                Stretch="Uniform"
                Margin="8"
                HorizontalAlignment="Right"
                Source="../Icons/bookmark.png"></Image>
    </Grid>
</UserControl>
