<Window x:Class="HelloWorldFr.DialogDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorldFr"
        mc:Ignorable="d"
        Title="DialogDemo" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.08*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnOpenFile" Width="100" Margin="5" Click="btnOpenFile_Click">Open</Button>
            <Button x:Name="btnSaveFile" Width="100" Margin="5" Click="btnSaveFile_Click">Save</Button>

        </StackPanel>
        <TextBox x:Name="tbContent" AcceptsReturn="True" Grid.Row="1"></TextBox>
    </Grid>
</Window>
