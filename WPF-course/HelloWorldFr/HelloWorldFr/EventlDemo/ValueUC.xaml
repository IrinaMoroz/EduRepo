<UserControl x:Class="HelloWorldFr.EventlDemo.ValueUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HelloWorldFr.EventlDemo"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="160">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Height="50" >
            <Button x:Name="btnAdd" Width="80" Click="btnAdd_Click">+10</Button>
            <Button x:Name="btnMinus" Width="80" Click="btnMinus_Click">-10</Button>
        </StackPanel>
        <Border Width="160" BorderThickness="2" HorizontalAlignment="Left" BorderBrush="Black"></Border>
        <TextBox x:Name="ValueLabel" TextChanged="ValueLabel_TextChanged" Text="50"></TextBox>
    </StackPanel>
</UserControl>
